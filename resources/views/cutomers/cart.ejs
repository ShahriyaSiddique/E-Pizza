<section class="cart py-14">
  <% if (session.cart) { %>

  <div class="order container mx-auto w-2/5">
    <div class="flex items-center mb-4">
      <img src="/img/cart-black.png" alt="" />
      <h1 class="text-2xl font-bold ml-3">Order Summery</h1>
    </div>
    <hr />

    <div class="cart-list">
      <% for(let pizza of Object.values(session.cart.items)) { %>
      <div class="flex items-center py-7">
        <img class="w-24" src="/img/<%= pizza.item.image %> " alt="" />
        <div class="flex-1 ml-4">
          <h2 class="text-lg"><%= pizza.item.name %></h2>
          <p class="text-lg uppercase"><%= pizza.item.size %></p>
        </div>
        <h2 class="flex-1 text-lg"><%= pizza.qty %> pcs</h2>
        <span class="text-lg font-bold"
          >৳<%= pizza.qty * pizza.item.price %>
        </span>
      </div>
      <% } %>
    </div>
    <hr />

    <div class="text-right my-4">
      <div>
        <span class="text-lg font-bold mr-3">Total Amount:</span>
        <span class="text-2xl font-bold color-primary"
          >৳<%= session.cart.totalPrice %>
        </span>
      </div>
      <form action="" class="mt-10">
        <input
          class="border border-gray-400 rounded p-2 w-1/2 my-1"
          type="text"
          placeholder="Enter Mobile Number"
        />
        <br />
        <input
          class="border border-gray-400 rounded p-2 w-1/2 my-1"
          type="text"
          placeholder="Enter Address"
        />
        <br />
        <!-- <button
            type="submit"
            class="btn-primary py-2 px-6 rounded-full font-bold text-white mt-5"
          >
            Order Now
          </button> -->
      </form>
      <a
        href=""
        class="btn-primary py-2 px-6 rounded-full font-bold text-white mt-5 inline-block"
        >Login to buy</a
      >
    </div>
  </div>

  <% } else{ %>
  <div class="empty-cart container mx-auto text-center">
    <h1 class="text-3xl font-bold mb-5">Cart Empty ☹️</h1>
    <p class="text-gray-400 text-lg">
      You Haven't Ordered any Pizza Yet <br />
      To Order your Favoriate Pizza Go to the Main Page
    </p>
    <img class="w-2/5 mx-auto my-16" src="/img/empty-cart.png" alt="" />

    <a href="/" class="py-2 px-4 btn-primary rounded-full text-white font-bold"
      >Go Back</a
    >
  </div>
  <% } %>
</section>
