<section class="hero py-16">
  <div class="container mx-auto flex justify-between items-center">
    <div class="w-1/2">
      <h6 class="text-lg"><em>Are you Hungry?</em></h6>
      <h1 class="font-bold text-6xl">Don't wait</h1>
      <button
        class="px-6 py-2 mt-5 rounded-full text-white font-bold btn-primary"
      >
        Order Now
      </button>
    </div>
    <div class="w-1/2"><img src="/img/hero-pizza.png" alt="" /></div>
  </div>
</section>

<section class="menu container mx-auto py-6">
  <h2 class="text-2xl font-bold py-6">All Pizza</h2>
  <div class="grid grid-cols-4 gap-x-12 gap-y-14">
    <% pizzas.forEach( pizza => { %>

    <div>
      <img class="h-40 mx-auto" src="/img/<%= pizza.image %>" alt="" />
      <div class="my-6 text-center">
        <h2 class="text-xl mb-4"><%= pizza.name %></h2>
        <span class="text-xs uppercase rounded-full bg-gray-100 py-1 px-4"
          ><%= pizza.size %></span
        >
      </div>
      <div class="flex justify-around items-center">
        <span class="text-lg font-bold">à§³<%= pizza.price %></span>
        <div>
          <button
            data-pizza="<%= JSON.stringify(pizza) %> "
            class="add-to-cart font-bold rounded-full px-5 py-1 flex items-center"
          >
            <span>+</span>
            <span class="ml-4">Add</span>
          </button>
        </div>
      </div>
    </div>

    <% }) %>
  </div>
</section>
